---
import Header from '../components/Header.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    <script src="../scripts/main.ts"></script>
	</head>
	<body>
    <script is:inline>
      const mql = window.matchMedia('(prefers-color-scheme: light)');
      const storedTheme = localStorage.getItem('theme');
      const storedColor = localStorage.getItem('color');

      document.documentElement.setAttribute(
        'data-theme',
        storedTheme
          ? storedTheme
          : mql.matches
            ? 'light'
            : 'dark',
      );

      document.documentElement.setAttribute(
        'data-color',
        storedColor ? storedColor : 'green',
      );
    </script>
    <Header />
		<slot />
	</body>
</html>
<style is:global>

  :root {
    --bg-color: 245, 245, 245;
    --bg-alt-color: 220, 220, 220;
    --text-color: 36, 36, 36;
    --text-alt-color: 56, 56, 56;
    --track-color: 200, 200, 200;
    --button-color: 255, 255, 255;
    --button-hover-color: 249, 249, 249;
    --shadow-color: 10, 10, 10;

    --accent-blue-1: 12, 123, 255;
    --accent-blue-2: 5, 75, 155;

    --accent-green-1: 9, 142, 9;
    --accent-green-2: 7, 117, 7;

    --accent-red-1: 227, 25, 25;
    --accent-red-2: 179, 20, 20;

    --accent-orange-1: 229, 149, 0;
    --accent-orange-2: 204, 132, 0;

    --accent-purple-1: 140, 0, 201;
    --accent-purple-2: 111, 0, 158;

    --bg-size: 4vw;
    --bg-position: calc(var(--bg-size) / 2) calc(var(--bg-size) / 2);
    --bg-offset: calc(var(--bg-size) / 3);
  }
  :root {
    font-family: "Trebuchet MS", Inter, Avenir, Helvetica, Arial, sans-serif;
    font-size: 16px;
    line-height: 1.5;
    font-weight: 400;
  }

  [data-theme="dark"] {
    --bg-color: 36, 36, 36;
    --bg-alt-color: 12, 12, 12;
    --text-color: 254, 254, 254;
    --text-alt-color: 180, 180, 180;
    --track-color: 100, 100, 100;
    --button-color: 26, 26, 26;
    --button-hover-color: 20, 20, 20;

    --accent-blue-1: 12, 123, 255;
    --accent-blue-2: 87, 158, 243;

    --accent-green-1: 9, 142, 9;
    --accent-green-2: 20, 220, 20;

    --accent-red-2: 255, 90, 90;

    --accent-orange-2: 255, 165, 0;

    --accent-purple-2: 188, 0, 255;
  }

  [data-color="blue"] {
    --link-color: var(--accent-blue-1);
    --link-hover-color: var(--accent-blue-2);
  }

  [data-color="green"] {
    --link-color: var(--accent-green-1);
    --link-hover-color: var(--accent-green-2);
  }

  [data-color="red"] {
    --link-color: var(--accent-red-1);
    --link-hover-color: var(--accent-red-2);
  }

  [data-color="orange"] {
    --link-color: var(--accent-orange-1);
    --link-hover-color: var(--accent-orange-2);
  }

  [data-color="purple"] {
    --link-color: var(--accent-purple-1);
    --link-hover-color: var(--accent-purple-2);
  }

  html {
    min-height: 100vh;
    box-sizing: border-box;
  }

  *, *:before, *:after {
    box-sizing: inherit;
  }

  ul {
    font-size: 90%;
    color: rgb(var(--text-alt-color));
    padding-left: 1.5rem;
  }

  ul ul {
    margin: 0 0 0.5rem 0;
  }

  li:has(ul) {
    list-style-type: none;
  }

  @media screen {

    body {
      color: rgb(var(--text-color));
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      justify-content: start;
      min-height: 100vh;
      overflow: scroll;
      background:
        repeating-linear-gradient(
          135deg,
          rgb(var(--text-color)),
          rgb(var(--text-color)) 25%,
          transparent 25%,
          transparent
        ) repeat-y var(--bg-size) 0/var(--bg-position),
        repeating-linear-gradient(
          45deg,
          rgb(var(--text-color)),
          rgb(var(--text-color)) 25%,
          transparent 25%,
          transparent
        ) repeat-y var(--bg-size) 0/var(--bg-position),
        repeating-linear-gradient(
          135deg,
          rgba(0, 0, 0, 0.3),
          rgba(0, 0, 0, 0.3) 25%,
          transparent 35%,
          transparent
        ) repeat-y var(--bg-size) 0/var(--bg-position),
        repeating-linear-gradient(
          45deg,
          rgba(0, 0, 0, 0.3),
          rgba(0, 0, 0, 0.3) 25%,
          transparent 35%,
          transparent
        ) repeat-y var(--bg-size) 0/var(--bg-position),
        repeating-linear-gradient(
          -135deg,
          rgb(var(--bg-color)),
          rgb(var(--bg-color)) 25%,
          transparent 25%,
          transparent
        ) repeat-y var(--bg-size) var(--bg-offset)/var(--bg-position),
        repeating-linear-gradient(
          -45deg,
          rgb(var(--bg-color)),
          rgb(var(--bg-color)) 25%,
          transparent 25%,
          transparent
        ) repeat-y var(--bg-size) var(--bg-offset)/var(--bg-position),
        repeating-linear-gradient(
          -135deg,
          rgba(0, 0, 0, 0.3),
          rgba(0, 0, 0, 0.3) 25%,
          transparent 35%,
          transparent
        ) repeat-y var(--bg-size) var(--bg-offset)/var(--bg-position),
        repeating-linear-gradient(
          -45deg,
          rgba(0, 0, 0, 0.3),
          rgba(0, 0, 0, 0.3) 25%,
          transparent 35%,
          transparent
        ) repeat-y var(--bg-size) var(--bg-offset)/var(--bg-position),
        linear-gradient(
          to right,
          rgb(var(--text-color)),
          rgb(var(--text-color)) var(--bg-size),
          transparent var(--bg-size),
          transparent
        ) repeat-y 0 0/calc(var(--bg-size) * 4) 100%,
        linear-gradient(
          to bottom,
          rgb(var(--link-color)),
          rgb(var(--link-hover-color))
        ) fixed repeat-y 0 0/calc(var(--bg-size) * 1.5) 100%,
        rgb(var(--bg-color));
    }

    html,
    body {
      scroll-snap-type: y mandatory;
    }

    a:link,
    a:visited {
      color: rgb(var(--link-color));
      transition: color 200ms linear;
    }

    a:hover,
    a:active,
    a:focus {
      color: rgb(var(--link-hover-color));
    }
  }

  @media print {
    :root {
      font-size: 10pt;
    }

    h1 {
      font-size: 18pt;
    }

    h2 {
      font-size: 14pt;
    }

    h3 {
      font-size: 12pt;
    }

    h1, h2, h3, h4, h5, h6 {
      margin-bottom: 0.5em;
    }
  }

  .sr-only {
    position: absolute;
    left: -10000px;
    width: 1px;
    height: 1px;
    top: auto;
    overflow: hidden;
  }
</style>
