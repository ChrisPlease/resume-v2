---
import Header from '../components/Header.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    <script src="../scripts/main.ts"></script>
	</head>
	<body>
    <script is:inline>
      const mql = window.matchMedia('(prefers-color-scheme: light)');
      const storedTheme = localStorage.getItem('theme');

      document.documentElement.setAttribute(
        'data-theme',
        storedTheme
          ? storedTheme
          : mql.matches
            ? 'light'
            : 'dark',
      );
    </script>
    <Header />
		<slot />
	</body>
</html>
<style is:global>
  :root {
    font-family: "Trebuchet MS", Inter, Avenir, Helvetica, Arial, sans-serif;
    font-size: 16px;
    line-height: 1.5;
    font-weight: 400;
  }

  html {
    min-height: 100vh;
    box-sizing: border-box;
  }

  *, *:before, *:after {
    box-sizing: inherit;
  }

  @media screen, print {
    :root {
      --bg-color: 245, 245, 245;
      --bg-alt-color: 220, 220, 220;
      --text-color: 36, 36, 36;
      --text-alt-color: 56, 56, 56;
      --link-color: 12, 123, 255;
      --link-hover-color: 5, 75, 155;
      --track-color: 200, 200, 200;
      --button-color: 255, 255, 255;
      --button-hover-color: 249, 249, 249;
      --shadow-color: 10, 10, 10;
    }
  }

  @media screen {
    [data-theme="dark"] {
      --bg-color: 36, 36, 36;
      --bg-alt-color: 12, 12, 12;
      --text-color: 254, 254, 254;
      --text-alt-color: 180, 180, 180;
      --link-color: 12, 123, 255;
      --link-hover-color: 87, 158, 243;
      --track-color: 100, 100, 100;
      --button-color: 26, 26, 26;
      --button-hover-color: 20, 20, 20;
    }

    body {
      background-color: rgb(var(--bg-color));
      color: rgb(var(--text-color));
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      justify-content: start;
      min-height: 100vh;
      overflow: scroll;
    }

    html,
    body {
      scroll-snap-type: y mandatory;
    }

    a:link,
    a:visited {
      color: rgb(var(--link-color));
      transition: color 200ms linear;
    }

    a:hover,
    a:active,
    a:focus {
      color: rgb(var(--link-hover-color));
    }
  }

  @media print {
    :root {
      font-size: 10pt;
    }
  }

</style>
